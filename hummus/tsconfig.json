{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "lib": ["es2019"],
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "dest",
    "strict": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "inlineSourceMap": true
  }
}
