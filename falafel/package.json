{
  "name": "falafel",
  "version": "1.0.0",
  "main": "dest/index.js",
  "license": "GPL-2.0",
  "scripts": {
    "build": "rm -rf ./dest && tsc -p tsconfig.prod.json",
    "clean": "rm -rf ./data",
    "clean_db": "rm -rf ./data/db.sqlite ./data/world_state.db ./data/config",
    "clean_keys": "rm -rf ./data/account ./data/join_split ./data/*rollup*",
    "start": "node ./dest",
    "start:debug": "node --inspect-brk=0.0.0.0:9221 ./dest",
    "start:dev": "`yarn -s deploy_rollup_processor` && yarn start:dev_server",
    "start:dev_server": "tsc-watch -p tsconfig.prod.json --onSuccess 'yarn start'",
    "start:e2e": "./scripts/start_e2e.sh",
    "start:wasabi": "./scripts/start_wasabi.sh",
    "test:debug": "node --inspect-brk=0.0.0.0:9221 ./node_modules/.bin/jest",
    "test": "jest"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": ".*\\.test\\.ts$",
    "rootDir": "./src"
  },
  "dependencies": {
    "@aztec/barretenberg": "file:../barretenberg.js/dest",
    "@aztec/blockchain": "file:../blockchain/dest",
    "@koa/cors": "^3.0.0",
    "apollo-server-koa": "^2.17.0",
    "async-mutex": "^0.2.6",
    "bn.js": "^5.0.0",
    "class-validator": "^0.12.2",
    "dotenv": "^8.2.0",
    "fs-extra": "9.0.1",
    "graphql": "^15.3.0",
    "graphql-playground-middleware-koa": "^1.6.19",
    "halloumi": "file:../halloumi/dest",
    "koa": "^2.7.0",
    "koa-compress": "^3.0.0",
    "koa-router": "^7.4.0",
    "log-timestamp": "^0.3.0",
    "moment": "^2.25.3",
    "prom-client": "^13.0.0",
    "promise-readable": "^5.0.4",
    "request-ip": "^2.1.3",
    "source-map-support": "^0.5.19",
    "sqlite3": "^5.0.2",
    "type-graphql": "^1.0.0",
    "typedi": "^0.8.0",
    "typeorm": "0.2.29",
    "typescript": "^4.4.4"
  },
  "devDependencies": {
    "@types/bn.js": "^4.11.5",
    "@types/debug": "^4.1.5",
    "@types/fs-extra": "9.0.1",
    "@types/isomorphic-fetch": "^0.0.35",
    "@types/jest": "^24.0.15",
    "@types/koa": "^2.0.49",
    "@types/koa-compress": "^2.0.9",
    "@types/koa-router": "^7.0.42",
    "@types/node": "^12.6.8",
    "@types/request-ip": "^0.0.37",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "debug": "^4.1.1",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "jest": "^26.6.3",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^26.5.1",
    "ts-node": "^8.9.1",
    "tsc-watch": "^2.2.1"
  }
