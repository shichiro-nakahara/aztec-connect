{
  "name": "kebab",
  "version": "1.0.0",
  "main": "dest/index.js",
  "license": "GPL-2.0",
  "scripts": {
    "build": "rm -rf ./dest && yarn formatting && tsc -p tsconfig.json",
    "clean": "rm -rf ./data ./dest",
    "clean_db": "rm -rf ./data",
    "formatting": "prettier --check ./src && eslint --max-warnings 100 ./src",
    "start": "node ./dest",
    "start:debug": ". ./.env && node --inspect-brk=0.0.0.0:9221 ./dest",
    "start:dev": ". ./.env && yarn start:dev_server",
    "start:dev_debug": ". ./.env && yarn start:dev_server_debug",
    "start:dev_server": ". ./.env && tsc-watch -p tsconfig.json --onSuccess 'yarn start'",
    "start:dev_server_debug": ". ./.env && tsc-watch -p tsconfig.json --onSuccess 'yarn start:debug'",
    "start:e2e": "./scripts/start_e2e.sh"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": ".*\\.test\\.ts$",
    "rootDir": "./src"
  },
  "dependencies": {
    "@aztec/barretenberg": "file:../barretenberg.js/dest",
    "@aztec/blockchain": "file:../blockchain/dest",
    "@koa/cors": "^3.3.0",
    "@types/koa-bodyparser": "^4.3.7",
    "fs-extra": "^10.1.0",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-compress": "^5.1.0",
    "koa-router": "^7.4.0",
    "log-timestamp": "^0.3.0",
    "promise-readable": "^5.0.4",
    "sqlite3": "^5.0.8",
    "typeorm": "0.2.29"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^28.1.3",
    "@types/koa": "^2.13.4",
    "@types/koa-compress": "^4.0.3",
    "@types/koa-router": "^7.4.4",
    "@types/koa__cors": "^3.3.0",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "debug": "^4.1.1",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^28.1.2",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "tsc-watch": "^5.0.3"
  }
}
