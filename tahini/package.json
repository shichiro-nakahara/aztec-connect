    "@types/node": "^12.6.8",
    "@types/supertest": "^2.0.8",
    "@types/text-encoding": "^0.0.35",
    "eth-sig-util": "^2.5.3",
    "jest": "^25.0.0",
    "koa-bodyparser": "^4.3.0",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "text-encoding": "^0.7.0",
    "ts-node": "^8.9.1",
