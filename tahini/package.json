      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!barretenberg).+\\.js$"
    ],
    "rootDir": "./"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
