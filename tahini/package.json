    "koa-compress": "^3.0.0",
    "koa-router": "^7.4.0",
    "moment": "^2.24.0",
    "promise-readable": "^5.0.4",
    "sqlite3": "^4.2.0",
    "ts-jest": "^25.5.1",
    "typeorm": "^0.2.24",
    "typescript": "^3.5.3"
  },
