{
  "compilerOptions": {
    "target": "esnext",
    "module": "node16",
    "lib": ["dom", "esnext", "es2017.object"],
    "outDir": "dest",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": false,
    "esModuleInterop": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "resolveJsonModule": true
  },
  "references": [{ "path": "../blockchain/tsconfig.dest.json" }, { "path": "../sdk/tsconfig.dest.json" }],
  "include": ["src"]
}
