{
  "name": "wasabi",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf ./dest && yarn formatting && tsc -p tsconfig.cjs.json",
    "build:dev": "tsc -p tsconfig.cjs.json --watch",
    "start": "node ./dest",
    "debug": "node --inspect-brk=0.0.0.0:9221 ./dest",
    "start:dev": "tsc-watch -p tsconfig.cjs.json --onSuccess 'yarn start'",
    "test": "jest --passWithNoTests",
    "formatting": "prettier --check ./src && eslint --max-warnings 0 ./src",
    "clean": "rm -rf ./data ./dest"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".*\\.test\\.(tsx?|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "rootDir": "./src"
  },
  "dependencies": {
    "@aztec/blockchain": "file:../blockchain/dest",
    "@aztec/bridge-clients": "0.1.47",
    "@aztec/sdk": "file:../sdk/dest",
    "@ethersproject/providers": "^5.6.1",
    "log-timestamp": "^0.3.0",
    "source-map-support": "^0.5.19",
    "typescript": "^4.4.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^24.8.0",
    "prettier": "^2.0.5",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.9.1",
    "tsc-watch": "^2.2.1"
  }
}
