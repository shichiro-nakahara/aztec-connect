{
  "name": "wasabi",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && tsc -p tsconfig.cjs.json",
    "build:dev": "tsc -p tsconfig.cjs.json --watch",
    "start": "node ./dest",
    "debug": "node --inspect-brk=0.0.0.0:9221 ./dest",
    "start:dev": "tsc-watch -p tsconfig.cjs.json --onSuccess 'yarn start'",
    "test": "jest --passWithNoTests",
    "start:soak": "yarn build && DEBUG=bb:user_state ETHEREUM_HOST=http://localhost:8545 NUM_DEFI_AGENTS=50 NUM_PAYMENT_AGENTS=20 NUM_SDKS=8 MEMORY_DB=1 ROLLUP_HOST=http://localhost:8081 yarn start",
    "clean": "rm -rf ./dest"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".*\\.test\\.(tsx?|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "rootDir": "./src"
  },
  "dependencies": {
    "@aztec/sdk": "file:../sdk/dest",
    "ethers": "5.5.1",
    "log-timestamp": "^0.3.0",
    "source-map-support": "^0.5.19",
    "typescript": "^4.4.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "jest": "^24.8.0",
    "prettier": "^2.0.5",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.9.1",
    "tsc-watch": "^2.2.1"
  }
}
